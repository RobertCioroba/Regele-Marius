<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title </title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Regele Marius", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @if (Session["NumeUtilizator"] != null && (bool)Session["Activ"] == true)
                    {
                        <li>@Html.ActionLink("Medici", "Index", "Medic")</li>
                        <li>@Html.ActionLink("Articole", "Index", "Articol")</li>
                        <li>@Html.ActionLink("Programare Analiza", "Index", "ProgramareAnaliza1")</li>
                        <li>@Html.ActionLink("Programare Interventie", "Index", "ProgramareInterventie")</li>
                        <li>@Html.ActionLink("Deconectare", "Deconectare", "Cont")</li>
                    }

                    @if (Session["NumeUtilizator"] != null && (bool)Session["Activ"] == false)
                    {
                        <li>@Html.ActionLink("Specializari", "Index", "Specializare")</li>
                        <li>@Html.ActionLink("Lista pacienti", "Index", "Pacient")</li>
                        <li>@Html.ActionLink("Medici", "Index", "Medic")</li>
                        <li>@Html.ActionLink("Slider", "Index", "Slider")</li>
                        <li>@Html.ActionLink("Analize", "Index", "Analiza")</li>
                        <li>@Html.ActionLink("Interventii", "Index", "Interventie")</li>
                        <li>@Html.ActionLink("Articole", "Index", "Articol")</li>
                        <li>@Html.ActionLink("Programare Analiza", "Index", "ProgramareAnaliza1")</li>
                        <li>@Html.ActionLink("Deconectare", "Deconectare", "Cont")</li>
                    }

                    @if (Session["NumeUtilizator"] == null)
                    {
                        <li>@Html.ActionLink("Logare", "Logare", "Cont")</li>
                        <li>@Html.ActionLink("Inregistrare", "Inregistrare", "Cont")</li>
                    }

                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; Ora curenta - @DateTime.Now.Hour:@DateTime.Now.Minute</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
