@model IEnumerable<Regele_Marius.Models.User1>

@{
    ViewBag.Title = "Lista medici";
}

<h2>Lista medici</h2>

<p>
    @Html.ActionLink("Cont nou", "Inregistrare")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NumeUtilizator)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Parola)
        </th>
        <th>
            Tip cont
        </th>
        <th></th>
    </tr>

@foreach (var item in Model)
{
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Email)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.NumeUtilizator)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Parola)
    </td>
    @{
        if (item.Activ == true)
        {
            <td>
                Medic
            </td>
        }
        else
        {
            <td>
                Secretara
            </td>
        }

    }

    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.Id })|
        @{
            if (item.Activ == true)
            {
                @Html.ActionLink("Detalii", "Details", "Medic", new { id = item.IdMedic }, null)
            }
        }
    </td>
</tr>
 }

</table>
