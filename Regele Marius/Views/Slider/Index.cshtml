@model IEnumerable<Regele_Marius.Models.Slider>
<link href="~/Content/StyleSheet.css" type="text/css" rel="stylesheet" />


@{
    ViewBag.Title = "Slide-uri";

    if (Session["NumeUtilizator"] == null || (bool)Session["Activ"] == true)
    {
        Response.Redirect("~/Cont/Logare", false);
    }
}

<h2>Imagini slider</h2>

<div class="tooltip">
    @Html.ActionLink(" ", "Create", "Slider", new { style = "background: url('" + Url.Content("~/images/plus-solid.svg") + "') no-repeat center right; display:inline-block; height:30px; width:30px; filter: invert(11%) sepia(91%) saturate(5572%) hue-rotate(358deg) brightness(88%) contrast(112%);" })
    <span class="tooltiptext">Adauga slide</span>
</div>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nume)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Titlu)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descriere)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                <img src="@Url.Content(item.Imagine)" class="img-thumbnail" width="800" height="500" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Titlu)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descriere)
            </td>
            <td>
                <div class="tooltip">
                    @Html.ActionLink(" ", "Delete", "Slider", new { id = item.Id }, new { style = "background: url('" + Url.Content("~/images/trash.svg") + "') no-repeat center right; display:inline-block; height:30px; width:30px; filter: invert(91%) sepia(0%) saturate(6644%) hue-rotate(138deg) brightness(88%) contrast(84%);" })
                    <span class="tooltiptext">Stergere</span>
                </div>
                <div class="tooltip">
                    @Html.ActionLink(" ", "Edit", "Slider", new { id = item.Id }, new { style = "background: url('" + Url.Content("~/images/edit-solid.svg") + "')  no-repeat center; display:inline-block; height:30px; width:30px; filter: invert(11%) sepia(91%) saturate(5572%) hue-rotate(358deg) brightness(88%) contrast(112%);" })
                    <span class="tooltiptext">Editare</span>
                </div>
            </td>
        </tr>
    }

</table>
