        <div class="col-md-10">
            @Html.EnumDropDownListFor(model => model.ProgramareAnaliza.Gen, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.ProgramareAnaliza.Gen, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.ProgramareAnaliza.DataNastere, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
