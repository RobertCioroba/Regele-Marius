@model Regele_Marius.Models.Medic

@{
    ViewBag.Title = "Details";
    if (Session["NumeUtilizator"] == null || (bool)Session["Activ"] == true)
    {
        Response.Redirect("~/Cont/Logare", false);
    }

}

<h2>Detalii medic</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Nume)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Nume)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Prenume)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Prenume)
        </dd>

        <div>
            @Html.Partial("_Specializare", new ViewDataDictionary { { "id", Model.SpecializareId } })
        </div>

        <dt>
            Program
        </dt>

        @{
            if (Model.Schimb == Regele_Marius.Models.Schimb.Unu)
            {
                <dd>8:00 - 14:00</dd>
            }
            else
            {
                <dd>14:00 - 20:00</dd>
            }
        }


    </dl>
</div>
